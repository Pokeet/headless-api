    "webpack": "^3.6.0",
    "webpack-node-externals": "^1.6.0"
  },
  "scripts": {
    "test": "docker-compose -f dev.docker-compose.yml exec api bash -c \"node ./node_modules/.bin/eslint src/** test/** && ./node_modules/.bin/mocha --compilers js:babel-core/register -r ./test/initTests.js\"",
    "up": "docker-compose -f dev.docker-compose.yml up -d",
    "down": "docker-compose -f dev.docker-compose.yml down",
    "logs": "docker-compose -f dev.docker-compose.yml logs --follow api",
    "clean": "docker-compose -f dev.docker-compose.yml rm"
  }
